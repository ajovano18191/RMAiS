<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="fill_vertical"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_marginBottom="?android:attr/actionBarSize" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">

        <Button
            android:id="@+id/search_and_filter_clear_all_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search_and_filter_clear_all_button"
            android:drawableLeft="@drawable/outline_close_24"
            style="?android:attr/buttonBarButtonStyle" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:text="@string/search_and_filter_type_label" />

            <Switch
                android:id="@+id/switch_wff"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="@string/search_and_filter_switch_wff"
                tools:checked="true" />

            <Switch
                android:id="@+id/switch_sota"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="@string/search_and_filter_switch_sota"
                tools:checked="false" />
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:labelFor="@+id/search_and_filter_reference_text"
                android:text="@string/search_and_filter_reference_label" />

            <EditText
                android:id="@+id/search_and_filter_reference_text"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:autofillHints="Reference"
                android:inputType="text" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:text="@string/search_and_filter_name_label"
                android:labelFor="@id/search_and_filter_name_text"/>

            <EditText
                android:id="@+id/search_and_filter_name_text"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:autofillHints="Name of reference"
                android:inputType="text" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:text="@string/search_and_filter_loc_label"
                android:labelFor="@id/search_and_filter_loc_text"/>

            <EditText
                android:id="@+id/search_and_filter_loc_text"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:autofillHints="QTH Loc"
                android:inputType="text" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:text="@string/search_and_filter_radius_label"
                android:labelFor="@id/search_and_filter_radius_text"/>

            <EditText
                android:id="@+id/search_and_filter_radius_text"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:autofillHints="Radius in km"
                android:inputType="numberDecimal" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:text="@string/search_and_filter_sort_label" />

        <Spinner
            android:id="@+id/search_and_filter_sort_field_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:spinnerMode="dropdown" />

        <Spinner
            android:id="@+id/search_and_filter_sort_direction_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/search_and_filter_apply_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:text="@string/search_and_filter_apply_button" />

        <Button
            android:id="@+id/search_and_filter_cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:text="@string/search_and_filter_cancel_button" />

    </LinearLayout>

</LinearLayout>